{
  "name": "purify-invariant",
  "version": "0.0.12-3",
  "description": "An invariant utility for use alongside purify-ts.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "prepublishOnly": "npm run build",
    "test": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brandonpittman/purify-invariant.git"
  },
  "keywords": [
    "typescript",
    "purify-ts",
    "invariant"
  ],
  "files": [
    "dist"
  ],
  "nano-staged": {
    "*.{md,json,js,ts}": "prettier --write",
    "*.ts": "eslint --fix src"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "author": "Brandon Pittman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brandonpittman/purify-invariant/issues"
  },
  "homepage": "https://github.com/brandonpittman/purify-invariant#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "microbundle": "^0.15.0",
    "nano-staged": "^0.8.0",
    "prettier": "^2.6.2",
    "purify-ts": "^1.2.0",
    "simple-git-hooks": "^2.7.0",
    "tsup": "^5.12.8",
    "typescript": "^4.6.4"
  },
  "peerDependencies": {
    "purify-ts": "^1.2.0"
  }
}
